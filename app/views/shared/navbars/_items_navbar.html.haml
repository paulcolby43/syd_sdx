.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          -#
            = link_to 'javascript:history.back()' do
              %i.fa.fa-arrow-left.fa-lg
        .col-xs-4.col-sm-4
          = title
        .col-xs-4.col-sm-4
          %a{href: new_item_path, class: 'item_button', data: {disable_with: "<i class='fa fa-spinner fa-spin fa-lg'></i>"}}
            %i.fa.fa-plus.fa-lg
            = "Item" unless mobile_device?
